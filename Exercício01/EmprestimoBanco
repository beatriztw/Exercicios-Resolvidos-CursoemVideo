algoritmo "EmprestimoCassy"

// Autor : Beatriz Xavier
// Data : 22/06/2021

var
   emprestimo, parcelas, juros, total: Real

inicio
      Escreval ("BEM-VINDO(a) AO SEU BANCO VIRTUAL")
      Escreval ("Iremos dar inicio a sua operação! Vamos lá!")
      Escreval ( " " )
      Escreva ("Qual o valor do emprestimo? ")
      Leia (emprestimo)
      juros <- emprestimo*20/100
      Escreval ( " " )
      Escreval ("Já estamos quase terminando.. ")
      Escreval ( " " )
      Escreva ("Em quantas parcelas deseja fazer? ")
      Leia (parcelas)
      total <- (emprestimo + juros)/parcelas
      Escreval ( " " )
      Escreval ("Operação completa!")
      Escreval ( " " )
      Escreva ("Você pagará R$"  , total , " reais parcelados em " , parcelas , " vezes ")
fimalgoritmo